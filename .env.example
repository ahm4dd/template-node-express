# Copy to .env, or create .env.development / .env.production as needed.
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
NOTES_REPOSITORY=postgres
DATABASE_URL=postgresql://app:app@localhost:5432/app
BETTER_AUTH_SECRET=change-me-use-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3000/api/auth
AUTH_SESSION_EXPIRES_IN=604800
AUTH_SESSION_UPDATE_AGE=86400
AUTH_SESSION_FRESH_AGE=86400
AUTH_JWT_EXPIRATION=15m
RABBITMQ_URL=amqp://localhost:5672
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=app
POSTGRES_IMAGE=postgres:18.1-alpine3.23
SKIP_ENV_VALIDATION=false
